# --- Database Config ---
POSTGRES_USER=jatin
POSTGRES_PASSWORD=password
POSTGRES_DB=ticketforge
DB_PORT=5432

# --- Redis Config ---
REDIS_PORT=6379

# --- Application URIs ---
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:${DB_PORT}/${POSTGRES_DB}
REDIS_URL=redis://redis:${REDIS_PORT}
# NOTE: The variable name MUST be singular to match env.ts
KAFKA_BROKER=localhost:9094

# --- JWT Auth (Required) ---
JWT_ACCESS_SECRET=super_secret_access_key_123
JWT_REFRESH_SECRET=super_secret_refresh_key_123
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# --- Cloudinary (Required for image uploads) ---
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# --- Razorpay (Required for payments) ---
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ML Thresholds
HOT_EVENT_BOOKING_THRESHOLD=5
HOT_EVENT_VIEW_THRESHOLD=10