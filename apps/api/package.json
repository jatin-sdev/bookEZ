{
  "name": "api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently -n \"API,WORKER\" -c \"blue,magenta\" \"pnpm run dev:api\" \"pnpm run dev:worker\"",
    "dev:api": "tsx watch src/index.ts",
    "dev:worker": "tsx watch src/worker.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "tsx scripts/reset-db.ts",
    "db:setup-partitions": "tsx scripts/fix-partition-table.ts",
    "db:gen-mig": "drizzle-kit generate && drizzle-kit migrate",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@tensorflow/tfjs": "^4.22.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.9.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "graphql": "^16.12.0",
    "graphql-http": "^1.22.4",
    "ioredis": "^5.9.1",
    "jsonwebtoken": "^9.0.3",
    "kafkajs": "^2.2.4",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "razorpay": "^2.9.6",
    "socket.io": "^4.7.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.0",
    "@types/pg": "^8.16.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.31.8",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}